{% extends "layouts/layout_back.html.twig" %}

{% block content %}
    <h2 class="text-3xl font-semibold text-gray-700 mb-6">Liste des Apprenants</h2>

    <div class="bg-white shadow rounded-lg overflow-x-auto">
        <table class="min-w-full leading-normal">
            <thead>
                <tr class="bg-gray-100 text-gray-600 text-sm uppercase">
                    <th class="px-5 py-3 text-left">Nom Complet</th>
                    <th class="px-5 py-3 text-left">Email</th>
                    <th class="px-5 py-3 text-left">Promotion</th>
                    <th class="px-5 py-3 text-left">Sp√©cialisation</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr class="border-b border-gray-200 hover:bg-gray-50">
                    <td class="px-5 py-4 text-sm font-medium text-gray-900">{{ user.full_name }}</td>
                    <td class="px-5 py-4 text-sm text-gray-500">{{ user.email }}</td>
                    <td class="px-5 py-4 text-sm text-gray-500">{{ user.promotion }}</td>
                    <td class="px-5 py-4 text-sm">
                        <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded">{{ user.specialization }}</span>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}