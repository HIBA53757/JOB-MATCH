{% extends "layouts/layout_back.html.twig" %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-semibold text-gray-700">Entreprises Partenaires</h2>
        <a href="/admin/company/create" class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700">
            <i class="fas fa-plus mr-2"></i> Ajouter
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for company in companies %}
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
            <div class="flex items-center mb-4">
                <img class="w-12 h-12 rounded-full object-cover mr-4" src="/uploads/logos/{{company.logo}}" alt="Logo">
                <div>
                    <h3 class="text-lg font-bold text-gray-800">{{company.name}}</h3>
                    <p class="text-sm text-gray-500">{{company.secteur}}</p>
                </div>
            </div>
            <div class="text-gray-600 text-sm mb-4">
                <p><i class="fas fa-map-marker-alt w-5 text-center"></i> {{company.location}}</p>
                <p><i class="fas fa-envelope w-5 text-center"></i> {{company.email}}</p>
                <p><i class="fas fa-phone w-5 text-center"></i> {{company.telephone}}</p>
            </div>
            <div class="flex justify-end space-x-2 border-t pt-4">
            <form action="/admin/company/edit" method="POST">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="id" value="{{ company.id }}">
                <button class="text-yellow-500 hover:text-yellow-600"><i class="fas fa-pen"></i> Modifier</button>
            </form>
            <form action="/admin/company/delete" method="POST">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="id" value="{{ company.id }}">
                <button class="text-red-500 hover:text-red-600"><i class="fas fa-trash"></i> Supprimer</button>
            </form>
                
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}