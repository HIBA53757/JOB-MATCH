{% if offers is empty %}
    <p class="text-center text-gray-500">Aucune offre trouvée</p>
{% else %}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for offer in offers %}
            <div class="bg-white rounded-xl shadow p-6">
                <h3 class="text-lg font-bold mb-1">{{ offer.title }}</h3>
                <p class="text-sm text-gray-500 mb-2">{{ offer.company_name }}</p>
                <p class="text-sm mb-4">{{ offer.contract_type }}</p>

                <a href="/offer/{{ offer.id }}"
                   class="text-purple-600 font-semibold">
                    Voir détails →
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}
