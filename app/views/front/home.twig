{% extends "layouts/layout_front.html.twig" %}

{% block content %}
    <div class="bg-blue-600 rounded-xl p-8 mb-8 text-center text-white shadow-lg">
        <h1 class="text-3xl font-bold mb-2">Trouvez votre stage ou emploi</h1>
        <p class="mb-6 opacity-90">Parcourez les offres exclusives du réseau YouCode</p>
        
        <form class="max-w-3xl mx-auto flex flex-col md:flex-row gap-4" id="searchForm">
            <input type="text" placeholder="Titre, compétence, entreprise..." class="flex-grow p-3 rounded text-gray-800 focus:outline-none focus:ring-2 focus:ring-yellow-400">
            <select class="p-3 rounded text-gray-800 focus:outline-none">
                <option value="">Tous les contrats</option>
                <option value="CDI">CDI</option>
                <option value="Stage">Stage</option>
                <option value="Anapec">Anapec</option>
            </select>
            <button type="submit" class="bg-yellow-400 text-blue-900 font-bold py-3 px-6 rounded hover:bg-yellow-300 transition">
                Rechercher
            </button>
        </form>
    </div>

    <div class="flex flex-col md:flex-row gap-8">
        <aside class="w-full md:w-1/4">
            <div class="bg-white p-6 rounded-lg shadow sticky top-4">
                <h3 class="font-bold text-lg mb-4">Filtrer par</h3>
                
                <div class="mb-4">
                    <label class="font-semibold text-sm mb-2 block">Entreprise</label>
                    <div class="space-y-2">
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" class="rounded text-blue-600"> <span class="text-sm">Capgemini</span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" class="rounded text-blue-600"> <span class="text-sm">Orange</span>
                        </label>
                    </div>
                </div>
            </div>
        </aside>

        <div class="w-full md:w-3/4 space-y-4" id="jobsContainer">
            <div class="bg-white p-6 rounded-lg shadow hover:shadow-md transition border border-gray-100 flex flex-col md:flex-row justify-between items-start">
                <div class="flex gap-4">
                    <img src="https://ui-avatars.com/api/?name=Capgemini&background=0D8ABC&color=fff" class="w-16 h-16 rounded object-cover" alt="Logo">
                    <div>
                        <h2 class="text-xl font-bold text-gray-800 hover:text-blue-600 transition">
                            <a href="/user/companyDetails">Développeur Backend Laravel</a>
                        </h2>
                        <div class="text-sm text-gray-500 mt-1 mb-2">
                            <span class="mr-3"><i class="fas fa-building"></i> Capgemini</span>
                            <span class="mr-3"><i class="fas fa-map-marker-alt"></i> Casablanca</span>
                            <span class="bg-green-100 text-green-700 px-2 py-0.5 rounded text-xs">CDI</span>
                        </div>
                        <p class="text-gray-600 text-sm line-clamp-2">Nous recherchons un développeur passionné pour rejoindre notre équipe...</p>
                        <div class="mt-3 flex gap-2">
                            <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">PHP</span>
                            <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">Laravel</span>
                        </div>
                    </div>
                </div>
                <div class="mt-4 md:mt-0 text-right">
                    <span class="text-xs text-gray-400 block mb-2">Il y a 2 jours</span>
                    <a href="/user/postDetails" class="inline-block bg-blue-50 text-blue-600 px-4 py-2 rounded font-semibold hover:bg-blue-100 text-sm">Voir détails</a>
                </div>
            </div>
            </div>
    </div>
{% endblock %}