{% extends "layouts/layout_front.html.twig" %}

{% block content %}
    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-4xl mx-auto relative">
        
        {# Header Section #}
        <div class="bg-blue-50 p-8 border-b border-gray-100">
            <div class="flex items-center gap-6">
                <img src="https://ui-avatars.com/api/?name=Capgemini&size=128" class="w-24 h-24 rounded shadow-sm bg-white" alt="Logo">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">{{annonce.title}}</h1>
                    <div class="text-lg text-gray-600 mt-2 flex gap-4">
                        <a href="/company/1" class="hover:underline font-semibold text-blue-600">{{company.name}}</a>
                        <span>•</span>
                        <span>{{annonce.location}}</span>
                        <span>•</span>
                        <span class="text-green-600 font-bold">{{annonce.contract_type}}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="p-8 grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="md:col-span-2 space-y-6">
                <section>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Description du poste</h3>
                    <div class="text-gray-600 leading-relaxed">
                        <p>{{annonce.description}}</p>
                    </div>
                </section>

                <section>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Compétences requises</h3>
                    <ul class="list-disc list-inside text-gray-600 space-y-1">
                    {% for skill in skills %}
                        <li>{{skill}}</li>
                    {% endfor %}
                    </ul>
                </section>
            </div>

            {# Sidebar #}
            <div class="md:col-span-1">
                <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
                    <h4 class="font-bold text-gray-700 mb-4">Postuler</h4>
                    <p class="text-sm text-gray-500 mb-4">Intéressé par cette opportunité ? Envoyez votre CV directement.</p>
                    
                    {# 1. Hada howa l Button li ghadi i3ayet 3la JS #}
                    {% if result == 0 %}
                    <button onclick="openModal()" class="block w-full text-center bg-blue-600 text-white font-bold py-3 rounded hover:bg-blue-700 transition cursor-pointer">
                        Postuler maintenant
                    </button>
                    {% else %}
                    <button class="block w-full text-center bg-red-600 text-white font-bold py-3 rounded hover:bg-red-700 transition cursor-pointer">Vous êtes déjà inscrit(e) &rarr;</button>
                    {% endif %}
                    <hr class="my-6 border-gray-300">
                    
                    <h4 class="font-bold text-gray-700 mb-2">À propos de l'entreprise</h4>
                    <p class="text-sm text-gray-600 mb-3">Leader mondial du conseil et de la transformation numérique.</p>
                        <form method="POST" action="/user/companyDetails">
                            <input type="hidden" name="company_id" value="{{ company.id }}">
                            <button class="text-blue-600 text-sm font-semibold hover:underline">Voir la page entreprise &rarr;</button>
                        </form>
                </div>
            </div>
        </div>
    </div>

    {# 2. Hada howa l MODAL (Popup) li fih l Form #}
    <div id="applicationModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-lg mx-4 overflow-hidden transform transition-all">
            
            {# Modal Header #}
            <div class="bg-gray-50 px-6 py-4 border-b flex justify-between items-center">
                <h3 class="text-lg font-bold text-gray-800">Postuler à l'offre</h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>

            {# Modal Body (Form) #}
            <div class="p-6">
                {# Darori dir enctype="multipart/form-data" hit 3ndk upload dyal CV #}
                <form action="/user/post/motivation" method="POST">
                    
                    {# Hidden Inputs #}
                    <input type="hidden" name="announcement_id" value="{{ annonce.id }}">
                    <input type="hidden" name="user_id" value="{{ user_id }}">
                    <input type="hidden" name="company_id" value="{{ company.id }}">
                    {# Ila 3ndk CSRF token zidou hna #}
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                    {# Motivation Field #}
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="motivation">
                            Message de motivation
                        </label>
                        <textarea name="motivation" id="motivation" rows="4" class="shadow-sm border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Pourquoi êtes-vous le candidat idéal ?" required></textarea>
                    </div>

                    {# CV Upload Field #}
                    <div class="mb-6">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="cv">
                            CV (PDF)
                        </label>
                        <input type="text" name="cv" id="cv"  class="shadow-sm border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Cv URI ..." >
                    </div>

                    {# Actions #}
                    <div class="flex justify-end gap-3">
                        <button type="button" onclick="closeModal()" class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition">Annuler</button>
                        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition font-bold">Envoyer ma candidature</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {# 3. Script JS bach thakam f l modal #}
    <script>
        function openModal() {
            document.getElementById('applicationModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('applicationModal').classList.add('hidden');
        }

        // Optionnel: Bach tsad l modal ila wrkti barra mno
        window.onclick = function(event) {
            let modal = document.getElementById('applicationModal');
            if (event.target == modal) {
                closeModal();
            }
        }
    </script>
{% endblock %}