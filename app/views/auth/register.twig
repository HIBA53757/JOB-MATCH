{% extends "layouts/layout.twig" %}

{% block title %}Inscription - YouCode Jobs{% endblock %}

{% block content %}
<div class="flex items-center justify-center py-10">
    <div class="w-full max-w-lg bg-white rounded-lg shadow-lg overflow-hidden border border-gray-100">
        
        <div class="px-8 py-6 bg-blue-600 text-white text-center">
            <h1 class="text-2xl font-bold">{{ title|default('Créer un compte') }}</h1>
            <p class="text-blue-100 text-sm mt-1">Rejoignez le réseau YouCode</p>
        </div>

        <div class="px-8 py-8">
            {% if errors is not empty %}
                <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 text-sm" role="alert">
                    <p class="font-bold mb-1">Erreur d'inscription</p>
                    {% for field, messages in errors %}
                        {% for message in messages %}
                            <p>• {{ message }}</p>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endif %}

            <form action="/register" method="post">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                <div class="mb-5">
                    <label for="full_name" class="block text-gray-700 text-sm font-bold mb-2">Nom Complet</label>
                    <input 
                        name="full_name" 
                        type="text" 
                        id="full_name"
                        placeholder="John Doe" 
                        class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 border-gray-300"
                    >
                </div>

                <div class="mb-5">
                    <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email YouCode</label>
                    <input 
                        name="email" 
                        type="email" 
                        id="email"
                        placeholder="prenom.nom@youcode.ma" 
                        class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 border-gray-300"
                    >
                </div>

                <div class="mb-5">
                    <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Mot de passe</label>
                    <input 
                        name="password" 
                        type="password" 
                        id="password"
                        placeholder="Minimum 8 caractères" 
                        class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 border-gray-300"
                    >
                </div>

                <div class="mb-8">
                    <label for="password_confirmation" class="block text-gray-700 text-sm font-bold mb-2">Confirmer le mot de passe</label>
                    <input 
                        name="password_confirmation" 
                        type="password" 
                        id="password_confirmation"
                        placeholder="Répétez le mot de passe" 
                        class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 border-gray-300"
                    >
                </div>

                <button 
                    type="submit" 
                    class="w-full bg-blue-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-blue-700 transition duration-200"
                >
                    S'inscrire
                </button>
            </form>
        </div>

        <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 text-center">
            <p class="text-sm text-gray-600">
                Vous avez déjà un compte ? 
                <a href="/login" class="text-blue-600 font-semibold hover:underline">Se connecter</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}